.card 
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  float: left;
  margin: 10px
  width: 8em;
  height 12em;


.img-icon
  text-align: center;
  font-size: 5em;

.card:hover 
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);

